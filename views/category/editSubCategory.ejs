<%-include("../common/header.ejs")%>

  <body class="vertical-layout vertical-menu-modern  navbar-floating footer-static  " data-open="click"
    data-menu="vertical-menu-modern" data-col=""></body>
  <%-include("../common/Navbar.ejs")%>
    <%-include("../common/Sidebar.ejs")%>
      <script>
        function previewImage(event) {
          const input = event.target;
          if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
              document.getElementById('account-upload-img').src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
          }
        }
      </script>
      <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper container-xxl p-0">
          <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
              <div class="row breadcrumbs-top">
              </div>
            </div>
          </div>
          <div class="content-body">
            <section id="page-account-settings">
              <div class="row">
                <div class="col-md-9">
                  <div class="card">
                    <div class="card-body">
                      <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="account-vertical-general"
                          aria-labelledby="account-pill-general" aria-expanded="true">
                          <form class="validate-form mt-2" action="/updateSubCategory" method="post"
                            enctype="multipart/form-data">
                            <div class="row">
                              <div class="col-12 col-sm-6">
                                <div class="mb-1">
                                  <label class="form-label" for="account-username">Image</label>
                                  <label for="account-upload" class="btn btn-sm btn-primary mb-75 me-75">Upload</label>
                                  <input type="file" name="image" id="account-upload" hidden accept="image/*"
                                    onchange="previewImage(event)" />
                                </div>
                              </div>
                              <a href="#" class="me-25">
                                <img src="/images/userImage/<%-data.image %>" id="account-upload-img"
                                  class="rounded me-50" alt=" image" height="80" width="80" />
                              </a>
                              <div class="mt-75 ms-1">
                              </div>
                              <div class="col-12 col-sm-6">

                                <div class="col-12 my-2">
                                  <div class="mb-1 row">
                                    <div class="col-sm-12">
                                      <label class="col-form-label" for="name">Category Name</label>
                                    </div>
                                    <div class="col-sm-12">
                                      <select class="form-select" id="categoryId" name="categoryId">
                                        <% DataCategory.forEach((data, i)=> { %>
                                          <option value="<%= data._id %>" <%=data?.categoryId?.name ? 'selected' : '' %>
                                            ><%= data?.categoryId?.name %>
                                          </option>
                                          <% }) %>
                                      </select>
                                    </div>
                                  </div>
                                </div>

                                <!-- <div class="mb-1">
                              <label class="form-label" for="account-username">Category Name</label>
                              <input type="text" class="form-control" id="categoryId" name="categoryId" placeholder="name" value="<%-data?.categoryId?.name%>" />
                            </div> -->

                                <div class="mb-1">
                                  <label class="form-label" for="account-username">Name</label>
                                  <input type="text" class="form-control" id="name" name="name" placeholder="name"
                                    value="<%-data.name%>" />
                                </div>
                              </div>
                              <input type="hidden" class="form-control" id="name" name="id" placeholder="id"
                                value="<%-data.id%>" />
                              <div class="col-12">
                                <button type="submit" class="btn btn-primary mt-2 me-1"
                                  href="/getSubCategory">Save</button>
                                <a type="reset" class="btn btn-outline-secondary mt-2" href="/getSubCategory">Cancel</a>
                              </div>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>

      <div class="sidenav-overlay"></div>
      <div class="drag-target"></div>
      <%-include("../common/Footer.ejs")%>